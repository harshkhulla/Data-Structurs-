//In Java
class solution{
   public Arraylist<Integer> bfsofgraph(int V, ArrayList<ArrayList<Integer>> adj){
       ArrayList <Integer > bfs = new ArrayList <>();
       boolean vis [] =new boolean[V];
       Queue <Integer> q= new Linked List <> ();

      q.add(0);
      vis[0]== true;

    while(!q.isEmpty){
       Integer node = q.poll();
       bfs.add(node);


      for(Integer it : adj.get(node)){
         if (vis[it]== false){
           if(vis[it] == true)
           q.add(it);
         }
      }
    }
return bfs;
   }
}
